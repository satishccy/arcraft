{
  "compilerOptions": {
    "lib": ["ES2015", "ES2017", "ES2018", "ES2019", "ES2020", "DOM"],
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src"]
}
